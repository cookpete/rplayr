{
  "name": "reddit-player",
  "version": "0.0.1",
  "description": "A React app to parse and play media from subreddits and comment threads.",
  "scripts": {
    "clean": "rimraf dist data",
    "build:webpack": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "prebuild": "npm run clean && npm run fetch-playlists",
    "build": "npm run build:webpack && cp index.html dist",
    "postbuild": "cp index.html dist",
    "start": "node server.js",
    "lint:js": "standard --verbose | snazzy",
    "lint:css": "scss-lint src",
    "lint": "npm run lint:js; npm run lint:css",
    "test": "NODE_ENV=production mocha --require ignore-styles test --compilers js:babel-core/register",
    "fetch-playlists": "babel-node scripts/fetch-playlists.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cookpete/reddit-player.git"
  },
  "keywords": [
    "react",
    "reddit",
    "music",
    "player",
    "playlist",
    "media",
    "subreddit",
    "comment",
    "threads",
    "youtube",
    "soundcloud"
  ],
  "author": "Pete Cook <pete@cookpete.com> (http://github.com/cookpete)",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/cookpete/reddit-player/issues"
  },
  "homepage": "https://github.com/cookpete/reddit-player",
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.0",
    "babel-eslint": "^5.0.0-beta6",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.4.1",
    "css-loader": "^0.23.1",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "ignore-styles": "^1.2.0",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "react-addons-test-utils": "^0.14.6",
    "rimraf": "^2.5.0",
    "sass-loader": "^3.1.2",
    "snazzy": "^2.0.1",
    "standard": "^5.4.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.11",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  },
  "dependencies": {
    "fetch-reddit": "0.0.10",
    "lscache": "^1.0.5",
    "normalize.css": "^3.0.3",
    "query-string": "^3.0.0",
    "randomcolor": "git+https://github.com/CookPete/randomColor.git",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-player": "^0.5.3",
    "react-router": "^2.0.0-rc5",
    "react-timeago": "^2.2.1"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
